build_toolchain_file mingw64-toolchain.cmake
./configure --build=$BUILD_TRIPLET \
            --host=$HOST_TRIPLET \
            --prefix=$PREFIX \
            --enable-shared \
            --disable-static \
            --disable-jack-support \
            --disable-dbus-support \
            --disable-alsa-support \
            --disable-pulse-support \
            --disable-libsndfile-support \
            || exit 1

make || exit 1
make install || exit 1

